# AllDebrid API
ALLDEBRID_API_KEY=your_api_key_here

# Storage optimization
STORAGE_TYPE=auto
ARIA2_CONNECTIONS=16
ARIA2_SPLIT=1
ARIA2_DISK_CACHE=128M
RAM_BUFFER_PER_DOWNLOAD=512M
MAX_CONCURRENT_DOWNLOADS=2

# Write optimization
FILE_ALLOCATION=prealloc
WRITE_BATCH_SIZE=64M
ENABLE_MMAP=true

# Logging
LOG_LEVEL=INFO

# Optional features
ENABLE_DASHBOARD=false
AUTO_EXTRACT=false

# Paths
DOWNLOAD_PATH=/downloads
CONFIG_PATH=/config

# API Server
API_HOST=0.0.0.0
API_PORT=6500
